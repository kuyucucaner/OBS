<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Personel Courses</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.6/dist/sweetalert2.min.css">
  <link rel="stylesheet" href="./stylesheets/personelCourse.css">
  <link rel="stylesheet" href="./stylesheets/navbar.css">

</head>

<body>
  <%- include('../views/partials/navbar') %>
    <div class="profile">
      <% if (user.role === 'Öğretmen') { %>
        <div class="personelCourse">
            <h1>Öğretmen Derslerim</h1>
            <table border="1">
                <thead>
                    <tr>
                        <th>Ders Adı</th>
                        <th>Ders Kodu</th>
                        <th>Dersin Öğretmeni</th>
                        <th>Materyal Dosyası</th>
                        <th>Ders Dönemi</th>
                        <th>Ders Derecesi</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = 0; i < teacherCourses.length; i++) { %>
                        <tr>
                            <td><%= teacherCourses[i].CourseName %></td>
                            <td><%= teacherCourses[i].CourseCode %> </td>
                            <td><%= teacherCourses[i].FirstName %> <%= teacherCourses[i].LastName %></td>
                            <td><%= teacherCourses[i].Title %></td>
                            <td><%= teacherCourses[i].Semester %></td>
                            <td><%= teacherCourses[i].Grade %></td>
                        </tr>
                    <% } %>
                </tbody>        
            </table>
        </div>
      <% } else if (user.role === 'Öğrenci') { %>
        <div class="personelCourse">
          <h1>Öğrenci Derslerim</h1>
          <table border="1">
              <thead>
                  <tr>
                      <th>Ders Adı</th>
                      <th>Ders Kodu</th>
                      <th>Dersin Öğretmeni</th>
                      <th>Materyal Dosyası</th>
                      <th>Ders Dönemi</th>
                      <th>Ders Derecesi</th>
                  </tr>
              </thead>
              <tbody>
                  <% for (let i = 0; i < studentCourses.length; i++) { %>
                      <tr>
                          <td><%= studentCourses[i].CourseName %></td>
                          <td><%= studentCourses[i].CourseCode %></td>
                          <td><%= studentCourses[i].FirstName %></td>
                          <td><%= studentCourses[i].Title %></td>
                          <td><%= studentCourses[i].Semester %></td>
                          <td><%= studentCourses[i].Grade %></td>
                      </tr>
                  <% } %>
              </tbody>        
          </table>
      </div>
      <% } %>
  
    <script src='./javascripts/goToPages.js'></script>
    <script src='./javascripts/logout.js'></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.6/dist/sweetalert2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>